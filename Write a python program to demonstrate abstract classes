#abstract class
from abc import ABC
class polygon(ABC):
    #abstract method
    def sides(self):
        pass
class triangle(polygon):
    def sides(self):
        print("Triangle has 3 sides")
class pentagon(polygon):
    def sides(self):
        print("Pentagon has 5 sides")
class hexagon(polygon):
    def sides(self):
        print("Hexagon has 6 sides")
class square(polygon):
    def sides(self):
        print("Square has 4 sides")
#driver code
t=triangle()
t.sides()
s=square()
s.sides()
p=pentagon()
p.sides()
h=hexagon()
h.sides()
